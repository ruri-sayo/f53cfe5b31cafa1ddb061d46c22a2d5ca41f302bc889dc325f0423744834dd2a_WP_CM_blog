---
/**
 * 小説シリーズトップページ用レイアウト
 */
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import { getFullPath } from '../consts';

interface Props {
  series: CollectionEntry<'novel'>;
  episodes: CollectionEntry<'novel'>[];
}

const { series, episodes } = Astro.props;
const { Content } = await series.render();
---

<BaseLayout title={series.data.title} description={series.data.short_description}>
  <article class="prose prose-neutral max-w-none">
    <header class="mb-8">
      <p class="text-sm text-gray-500 uppercase tracking-wide">Novel Series</p>
      <h1 class="text-3xl font-bold">{series.data.title}</h1>
      <div class="mt-2 flex flex-wrap items-center gap-3 text-sm text-gray-600">
        {series.data.status && (
          <span class="bg-purple-100 text-purple-800 px-2 py-1 rounded-full font-semibold">{series.data.status}</span>
        )}
        {series.data.short_description && (
          <span>{series.data.short_description}</span>
        )}
      </div>
    </header>

    <div class="mb-10">
      <Content />
    </div>

    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Episodes</h2>
      <div class="grid gap-4">
        {episodes.map((episode) => (
          <a href={getFullPath(`/novel/${episode.slug}/`)} class="block bg-white p-4 rounded-lg shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm text-gray-500">Episode {episode.data.episode}</p>
                <h3 class="text-lg font-bold text-blue-800">{episode.data.title}</h3>
              </div>
              <span class="text-blue-600">&rarr;</span>
            </div>
          </a>
        ))}
      </div>
    </section>
  </article>
</BaseLayout>
