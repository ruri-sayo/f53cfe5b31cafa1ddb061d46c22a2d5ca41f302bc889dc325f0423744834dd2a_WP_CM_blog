---
/**
 * 小説シリーズ一覧ページ
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { getFullPath } from '../../consts';

// シリーズインデックスのみ取得
const allNovel = await getCollection('novel');
const seriesList = allNovel
  .filter((entry) => entry.data.is_series_index === true)
  .sort((a, b) => (a.data.order ?? 99) - (b.data.order ?? 99));
---

<BaseLayout title="Novel">
  <section class="space-y-6">
    <h1 class="text-3xl font-bold mb-4">Novel シリーズ一覧</h1>
    {seriesList.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {seriesList.map((series) => (
          <a href={getFullPath(`/novel/${series.slug}/`)}
            class="block bg-white p-4 rounded-lg shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm text-gray-500 uppercase tracking-wide">{series.data.status || 'series'}</p>
                <h2 class="text-xl font-bold">{series.data.title}</h2>
                {series.data.short_description && (
                  <p class="text-gray-600 mt-1">{series.data.short_description}</p>
                )}
              </div>
              <span class="text-blue-600 text-lg">&rarr;</span>
            </div>
          </a>
        ))}
      </div>
    ) : (
      <p class="text-gray-600">シリーズがまだ登録されていません。</p>
    )}
  </section>
</BaseLayout>
